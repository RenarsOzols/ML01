<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" layout="1column">
    <body>
        <referenceBlock name="navigation.sections" remove="true"/>
        <referenceBlock name="sidebar.additional" remove="true"/>
        <referenceContainer name="content" htmlClass="faq_content" htmlTag="div">
            <container name="mycustompage" htmlTag="div" htmlClass="mycustompage">
                <block class="Magebit\Faq\Block\QuestionList" name="faq" template="Magebit_Faq::question-list.phtml"/>
            </container>
        </referenceContainer>
    </body>
</page>
