declare(strict_types=1);

/**
 * @var  $block QuestionList
 */

use Magebit\Faq\Block\QuestionList;

?>
<div class="faq-wrapper">
    <h1 class="faq-title"><?= __('Frequently Asked Questions'); ?></h1>
    <?php if ($block->getQuestions()): ?>
        <div class="faq-list" id="faq-list">
            <?php foreach ($block->getQuestions() as $question): ?>
                <div class="faq-item" data-role="collapsible">
                    <div class="faq-trigger" data-role="trigger">
                        <h3 class="faq-question"><?= $question->getQuestion(); ?></h3>
                    </div>
                    <div class="faq-content" data-role="content">
                        <p class="faq-answer"><?= $question->getAnswer(); ?></p>
                    </div>
                </div>
            <?php endforeach; ?>
        </div>

        <script>
            require([
                'jquery',
                'accordion'], function ($) {
                $("#faq-list").accordion();
            });
        </script>
    <?php endif; ?>
</div>

